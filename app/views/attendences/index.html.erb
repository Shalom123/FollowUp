<p id="notice"><%= notice %></p>

<h1>Listing Attendences</h1>

<table>
  <thead>
    <tr>
      <th>Lecturer</th>
      <th>Student</th>
      <th>Course</th>
      <th>Room number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendences.each do |attendence| %>
      <tr>
        <td><%= attendence.lecturer_id %></td>
        <td><%= attendence.student_id %></td>
        <td><%= attendence.course_id %></td>
        <td><%= attendence.room_number %></td>
        <td><%= link_to 'Show', attendence %></td>
        <td><%= link_to 'Edit', edit_attendence_path(attendence) %></td>
        <td><%= link_to 'Destroy', attendence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

